{
  "id": "light-toggle",
  "name": "Light Toggle",
  "description": "A lightbulb button that toggles lights on/off with glow effect.",
  "file": "light-toggle.svg",
  "version": "1.0.0",
  
  "requiredCommands": ["on", "off"],
  "optionalCommands": [],
  
  "stateBindings": {
    "switch": {
      "type": "boolean",
      "attribute": "switch",
      "onValue": "on",
      "offValue": "off",
      "cssClass": {
        "on": "is-on",
        "off": "is-off"
      }
    }
  },
  
  "regions": [
    {
      "id": "toggle",
      "selector": "[data-region='toggle']",
      "action": "toggle",
      "stateAttribute": "switch",
      "onValue": "on",
      "toggleCommands": ["on", "off"],
      "eventType": "click",
      "tooltip": "Toggle Light"
    }
  ],
  
  "layout": {
    "aspectRatio": "1:1",
    "preferredWidth": 48,
    "preferredHeight": 48
  }
}
