{
  "id": "thermostat-setpoint",
  "name": "Thermostat Setpoint",
  "description": "Adjusts heating and/or cooling setpoint temperatures.",
  "file": null,
  "version": "1.0.0",
  "reactComponent": "ThermostatSetpoint",

  "requiredCommands": [],
  "optionalCommands": ["setHeatingSetpoint", "setCoolingSetpoint", "setThermostatSetpoint"],

  "stateBindings": {
    "heatingSetpoint": {
      "type": "number",
      "attribute": "heatingSetpoint",
      "min": 40,
      "max": 90
    },
    "coolingSetpoint": {
      "type": "number",
      "attribute": "coolingSetpoint",
      "min": 60,
      "max": 99
    },
    "temperature": {
      "type": "number",
      "attribute": "temperature"
    }
  },

  "regions": [
    {
      "id": "setpoint",
      "action": "popup",
      "stateAttribute": "heatingSetpoint",
      "tooltip": "Adjust temperature setpoint"
    }
  ],

  "layout": {
    "aspectRatio": "1:1",
    "preferredWidth": 64,
    "preferredHeight": 64
  }
}
